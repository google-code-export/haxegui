<?xml version="1.0" encoding="iso-8859-1"?>
<haxegui:Layout name="Example1">
<!-- Non-visual -->
    <String name="hello">Hello World</String>
    <Float name="aNumber">3.45</Float>
	<haxegui:DataSource>
		<Array name="StringArray">
			<String>Array Item 1</String>
			<String>Array Item 2</String>
			<String>Array Item 3</String>
			<String>Array Item 4</String>
			<String>Array Item 5</String>
		</Array>
	</haxegui:DataSource>
	<haxegui:DataSource>
		<List name="List1">
			<String>List Item 1</String>
			<String>List Item 2</String>
			<String>List Item 3</String>
			<String>List Item 4</String>
			<String>List Item 5</String>
		</List>
	</haxegui:DataSource>
<!-- Visual -->
	<haxegui:Window name="Widgets" x="100" y="30" width="800" height="600" sizeable="true" >		
		<haxegui:MenuBar name="menubar" width="512" x="10" y="20">
			<haxegui:Menu type="Object" name="menu1">
				<Item type="String">a</Item>
				<Item type="String">b</Item>
				<Item type="String">c</Item>
			</haxegui:Menu>
			<haxegui:Menu type="Object" name="menu2">
				<Item type="String">a2</Item>
				<Item type="String">b2</Item>
				<Item type="String">c2</Item>
			</haxegui:Menu>
		</haxegui:MenuBar>
		<haxegui:ToolBar name="Toolbar" width="400" x="10" y="44" >
			<haxegui:controls:Button name="Btn1" x="30" y="4" width="30" icon="STOCK_NEW" />
			<haxegui:controls:Button name="Btn2" x="60" y="4" width="30" icon="STOCK_OPEN"/>
			<haxegui:controls:Button name="Btn3" x="90" y="4" width="30" icon="STOCK_SAVE"/>
			<haxegui:controls:Button name="Btn4" x="120" y="4" width="30" icon="STOCK_COPY" />
			<haxegui:controls:Button name="Btn5" x="150" y="4" width="30" icon="STOCK_CUT"/>
			<haxegui:controls:Button name="Btn6" x="180" y="4" width="30" icon="STOCK_PASTE"/>
			<haxegui:controls:Button name="Btn7" x="210" y="4" width="30" icon="STOCK_FIND"/>
		</haxegui:ToolBar>
			<haxegui:containers:ScrollPane name="ScrollPane1" x="10" y="84" >
				<haxegui:containers:Container width="512" height="512" >
					<haxegui:TabNavigator name="TabNavigator" x="0" y="0" width="512">
						<events>
							<script type="text/hscript" action="onLoaded">
							<![CDATA[
								function changeStack(e) {
									var stack = parent.getChildByName("Stack");
									for( i in 0...stack.numChildren)
										stack.getChildAt(i).visible = false;
									stack.getChildAt(this.activeTab).visible = true;
									this.removeEventListener(flash.events.Event.CHANGE, changeStack);
									this.getChildByName("TabStepper").adjustment.__setValue(this.activeTab);
									this.addEventListener(flash.events.Event.CHANGE, changeStack, false, 0, true);
								}
								this.addEventListener(flash.events.Event.CHANGE, changeStack, false, 0, true);
							]]>
							</script>
						</events>					
						<haxegui:Tab x="0" width="60" />
						<haxegui:Tab x="60" width="60"/>
						<haxegui:Tab x="120" width="60"/>

						<haxegui:controls:Label x="120" y="3" >Active tab: </haxegui:controls:Label>
						<haxegui:controls:Stepper name="TabStepper" x="300" y="2" value="0" step="1" max="2" autoRepeat="false" >
							<events>
								<script type="text/hscript" action="onLoaded">
								<![CDATA[
									function changeStack(e) {
										var stack = parent.parent.getChildByName("Stack");
										for( i in 0...stack.numChildren)
											stack.getChildAt(i).visible = false;
										parent.__setActive(this.adjustment.value);
										stack.getChildAt(this.adjustment.value).visible = true;
									}
									this.adjustment.addEventListener(flash.events.Event.CHANGE, changeStack, false, 0, true);
								]]>
								</script>
							</events>
						</haxegui:controls:Stepper>
					</haxegui:TabNavigator>
					<haxegui:containers:Stack name="Stack" y="24" width="512" height="512" selectedIndex="0">
						<!-- First stack child -->
						<haxegui:containers:Container width="512" height="512" >
							<haxegui:controls:Label x="14" y="14" >This window and it's content are dynamically generated from xml, Some events are also defined in hscript. </haxegui:controls:Label>
							<haxegui:controls:Button label="Click" x="30" y="50" width="120" />
							<haxegui:controls:Button label="Toggle" x="160" y="50" width="60" toggle="true" />
							<haxegui:controls:Button label="disabled" x="230" y="50" disabled="true" />
							<haxegui:controls:Button label="disabled" x="330" y="50" disabled="true" toggle="true" selected="true" />
							<haxegui:controls:Button name="colorButton" x="430" y="50" label="Red" color="0xB35959">
								<events>
									<script type="text/hscript" action="mouseClick">
									<![CDATA[
										if(this.color == 0xB35959) {
											this.color=0xA1F02A;
											this.label.tf.text = "Green";
										}
										else {
											this.color=0xB35959;
											this.label.tf.text = "Red";
										}
										this.dirty = true;
										this.redraw();
										this.label.tf.setTextFormat(DefaultStyle.getTextFormat());
										
									]]></script>
								</events>
							</haxegui:controls:Button>

							<haxegui:controls:CheckBox label="CheckBox1" x="30" y="90" />
							<haxegui:controls:CheckBox label="CheckBox2" x="170" y="90" checked="true" />
							<haxegui:controls:CheckBox label="CheckBox3" x="310" y="90" disabled="true"/>

							<haxegui:controls:ComboBox x="30" y="130" >
								<haxegui:DataSource>
									<List>
										<String>ComboBox Item1</String>
										<String>ComboBox Item2</String>
										<String>ComboBox Item3</String>
										<String>ComboBox Item4</String>
									</List>
								</haxegui:DataSource>
							</haxegui:controls:ComboBox>
								
							<haxegui:controls:ComboBox x="30" y="160" dataSource="@List1"/>
							<haxegui:controls:ComboBox x="30" y="190" disabled="true" />

							<haxegui:controls:Slider x="200" y="130" />
							<haxegui:controls:Slider x="200" y="160" step="10" page="40" />
							<haxegui:controls:Slider x="200" y="190" disabled="true" />

							<haxegui:controls:Stepper name="Stepper1" x="360" y="130" value="0" step="1" max="100" autoRepeat="true" repeatsPerSecond="20" repeatWaitTime=".5" />
							<haxegui:controls:Stepper name="Stepper2" x="360" y="160" value="0" step="5" max="200" autoRepeat="true" repeatsPerSecond="10" repeatWaitTime=".5" />
							<haxegui:controls:Stepper name="Stepper3" x="360" y="190" value="0" step="10" max="300" disabled="true" />

							<haxegui:controls:Input name="Input1" x="30" y="220" />
							<haxegui:controls:Input name="Input2" x="30" y="250" />
							<haxegui:controls:Input name="Input3" x="30" y="280" disabled="true"/>

							<haxegui:controls:RadioButton x="30" y="310" />
							<haxegui:controls:RadioButton x="30" y="340" />
							<haxegui:controls:RadioButton x="30" y="370" disabled="true" />
							<haxegui:controls:RadioButton x="30" y="400" selected="true" disabled="true" />

							<haxegui:controls:Expander x="430" y="90" >
									<haxegui:controls:UiList x="20" y="20" data="@StringArray" visible="false" />
							</haxegui:controls:Expander>

							<haxegui:controls:UiList x="210" y="250">
								<haxegui:DataSource name="FruitList">
									<List>
										<String>Apples</String>
										<String>Bananas</String>
										<String>Oranges</String>
									</List>
								</haxegui:DataSource>
								<events>
									<script type="text/hscript" action="onLoaded">
									<![CDATA[
										var d = this.dataSource;
										//d = this.dataSource;
										d.data.add("Pineapple");
										d.data.add("Watermelon");
										this.__setDataSource( d );
									]]>
									</script>
								</events>
							</haxegui:controls:UiList>
							<haxegui:controls:UiList name="List3" x="360" y="250" width="300" data="@List1" />

							<haxegui:controls:ProgressBar x="30" y="450" width="300" />
							<haxegui:controls:ProgressBar x="30" y="480" width="300" />
							<haxegui:controls:ProgressBar x="30" y="510" width="300" disabled="true"/>

							<!-- watch this out, if horizontal, set height for width (r220) --> 
							<haxegui:controls:ScrollBar target="" horizontal="true" x="360" y="450" height="300" />
							<haxegui:controls:ScrollBar target="" horizontal="true" x="360" y="480" height="300" />
							<haxegui:controls:ScrollBar target="" horizontal="true" x="360" y="510" height="300" disabled="true"/>

						</haxegui:containers:Container>
						<!-- Second stack child -->
						<haxegui:containers:Divider width="512" height="512">
							<haxegui:containers:Container width="512" color="0xFFFFFF">
								<haxegui:controls:Label x="20" y="20" >Second TabChild</haxegui:controls:Label>
							</haxegui:containers:Container>
							<haxegui:containers:Divider horizontal="true" width="512" height="256">
								<haxegui:containers:Container width="512" color="0xFF00FF"/>
							</haxegui:containers:Divider>
						</haxegui:containers:Divider>
						<!-- Third stack child -->
						<haxegui:containers:Container width="512" height="512"  >
							<haxegui:controls:Label x="20" y="20" >Third TabChild</haxegui:controls:Label>
							<haxegui:controls:RadioButton label="false" x="30" y="110" />
							<haxegui:controls:RadioButton label="false" x="30" y="140" />
							<haxegui:controls:RadioButton label="false" x="30" y="170" />
							<haxegui:controls:RadioButton label="false" x="30" y="200" />
						</haxegui:containers:Container>
						<!-- Fourth stack child -->
						<haxegui:containers:Container name="Container3" width="512" height="512" >
							<haxegui:Window name="ChildWindow" x="200" y="200" width="180" height="140" color="0xA5DE33">
								<haxegui:containers:Container name="Container1"  x="10" y="20" width="100%" height="100%" color="0xA5DE33"  >
									<haxegui:controls:Label x="20" y="4" >I'm a green child window</haxegui:controls:Label>
									<haxegui:controls:Button label="Click" x="20" y="30" width="120" color="0xA5DE33" />
						</haxegui:containers:Container>
					</haxegui:Window>
				</haxegui:containers:Container>
					</haxegui:containers:Stack>
				</haxegui:containers:Container>
			</haxegui:containers:ScrollPane>
    </haxegui:Window>
</haxegui:Layout>
